<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:hint="Task Title"
        android:singleLine="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"/>

    <EditText
        android:id="@+id/task_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:hint="Add Details"
        android:singleLine="true"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:drawableStart="@drawable/ic_short_text_black_24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/bg_menu_rectangle_one_rounded_tl"
        android:paddingRight="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <ImageButton
            android:id="@+id/task_save"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_save_veish_24dp"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</LinearLayout>